BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '10'
            on_text: app.handle_calc()
        BoxLayout:
            orientation:'vertical'
            size_hint_x: 0.25
            Button:
                id: up
                text: 'Up'
                on_press: app.change_text(1)
            Button:
                id: down
                text: 'Down'
                on_press: app.change_text(-1)
    Button:
        text: 'Convert M to km'
        on_press: app.handle_calc()
    Label:
        id: output_label
        font_size: 24
        color: (0, 1, 0, 1)
